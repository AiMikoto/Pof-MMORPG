#version 460 core

layout (location = 0) in vec3 position;
layout (location = 1) in vec2 texCoord;

uniform mat4 mvp;

out vec4 vertexColor;
out vec2 uvs;

void main() {
	uvs = texCoord;
    gl_Position = mvp * vec4(position, 1.0);
    vertexColor = vec4(0, 0.3, 0.8, 1.0); // make a light blue triangle peepoHappy
	
}